.card-detail .detail-title {
  font-size: 42rpx;
  font-weight: 700;
  padding-bottom: 10rpx;
}
.card-detail .detail-sale {
  font-size: 24rpx;
  color: #969896;
}
.card-detail .detail-image {
  margin: 20rpx 0;
}
.card-detail .detail-image .detail-image-item {
  width: 350rpx;
  height: 200rpx;
}
.card-detail .detail-image .detail-image-item image {
  width: 100%;
  height: 100%;
}
.card-detail .detail-image .detail-image-item:nth-child(n+2) {
  margin-left: 20rpx;
}
.card-detail .detail-rules {
  margin-bottom: 140rpx;
}
.card-detail .detail-rules .detail-tip {
  font-size: 28rpx;
}
.card-detail .big {
  position: fixed;
  left: 10rpx;
  right: 10rpx;
  bottom: 20rpx;
}
.card-detail .detail-pay {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: white;
}
.card-detail .detail-pay .detail-pay-left {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  background-color: #404040;
  border-radius: 50rpx 0 0 50rpx;
  padding: 10rpx 40rpx;
}
.card-detail .detail-pay .detail-pay-left .price:first-child {
  font-size: 28rpx;
  padding-bottom: 5rpx;
}
.card-detail .detail-pay .detail-pay-left .price:last-child {
  font-size: 22rpx;
  -webkit-text-decoration-line: line-through;
          text-decoration-line: line-through;
}
.card-detail .detail-pay .detail-pay-right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 42rpx;
  text-align: center;
  line-height: 92rpx;
  background-color: #ff7575;
  border-radius: 0 50rpx 50rpx 0;
  padding: 0 20rpx;
}
.card-detail .card-image {
  width: 100%;
  height: 100rpx;
}
.card-detail .card-image ._img {
  width: 100%;
  height: 100%;
}

