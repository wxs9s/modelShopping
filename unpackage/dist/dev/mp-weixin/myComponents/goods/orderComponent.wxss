.bookshelf-content {
  white-space: nowrap;
  width: 100%;
  padding-top: 20rpx;
  margin: 0 auto;
}
.bookshelf-content .order-item {
  width: 17%;
  padding: 10rpx 30rpx;
  display: inline-block;
  vertical-align: top;
}
.bookshelf-content .order-item .item-title {
  display: block;
  width: 90%;
  font-size: 30rpx;
  line-height: 40rpx;
  text-align: center;
}
.active {
  color: red;
  border-bottom: 1px solid #DF5000;
  padding-bottom: 10rpx;
  margin-left: 0;
}
.order-info {
  border-top: 1px solid #999999;
  background-color: #EEEEEE;
}
.order-info .order-item {
  background-color: white;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 30rpx;
}
.order-info .order-item .order-name {
  margin-bottom: 10rpx;
}
.order-info .order-item .order-name .order-status {
  color: #FF5511;
  font-size: 28rpx;
}
.order-info .order-item .order-image {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  width: 150rpx;
  height: 150rpx;
}
.order-info .order-item .order-image image {
  width: 100%;
  height: 100%;
}
.order-info .order-item .order-text {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
  color: #808080;
  font-size: 28rpx;
  margin-left: 20rpx;
  padding-top: 25rpx;
}
.order-info .order-item .order-status-btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  margin-right: 10rpx;
}
.order-info .order-item .order-status-btn .order-btn {
  font-weight: 400;
  font-size: 28rpx;
  color: #FF5511;
  border-radius: 50rpx;
  border: 1px solid #FF5511;
  padding: 10rpx 40rpx;
}

